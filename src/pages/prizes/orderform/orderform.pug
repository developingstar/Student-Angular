.page-wrapper
  .content-wrapper
    form.form-group(#orderForm="ngForm" (ngSubmit)="gotoNext(orderForm.valid)" novalidate)
      .header-nav
        h1.headers
          | Order Form
        .button-group
            button.kts-primary-btn.next-button(type="submit")
              | Next
      .form-content.scroll-content
        .item-info
          .input-label
            | FULL NAME
            .invalid-validation([hidden]="fullname.valid || (fullname.pristine && !orderForm.submitted)")
              | Full name is required
          input.kts-input(type="text" name="fullname" [(ngModel)]="fullName" #fullname="ngModel" required) 
        .item-info
          .input-label
            | PHONE NUMBER
            .invalid-validation([hidden]="phone.valid || (phone.pristine && !orderForm.submitted)")
              | Phone number is required
            .invalid-validation([hidden]="!phoneNumber || phoneNumber === '' || validationPhone() || (phone.pristine && !orderForm.submitted)")
                | Phone number is not correct
          input.kts-input(type="text" name="phone" [(ngModel)]="phoneNumber" #phone="ngModel" required) 
        .item-info
          .input-label
            | STREET ADDRESS
            .invalid-validation([hidden]="street.valid || (street.pristine && !orderForm.submitted)")
              | Street address is required
          input.kts-input(type="text" name="street" [(ngModel)]="streetAddress" #street="ngModel" required)
        .item-info
          .input-label
            | CITY
            .invalid-validation([hidden]="city.valid || (city.pristine && !orderForm.submitted)")
              | City is required
          input.kts-input(type="text" name="city" [(ngModel)]="cityName" #city="ngModel" required) 
        .row-state-zip     
          .item-info
            .input-label
              | STATE
              .invalid-validation([hidden]="selectedState.length > 0 ||!orderForm.submitted")
                | State is required
            angular2-multiselect(
              name = 'state'
              [data]='stateList'
              [(ngModel)]='selectedState'
              [settings]='ktsSelectSettings'
              (onSelect)='onStateSelect($event)'            
            )
          .item-info
            .input-label
              | ZIP CODE
              .invalid-validation([hidden]="zipcode.valid || selectedState.length === 0 || (zipcode.pristine && !orderForm.submitted)")
                | Zip code is required
              .invalid-validation([hidden]="!zipCode || zipCode === '' || selectedState.length === 0 || validationZipCode() || (zipcode.pristine && !orderForm.submitted)")
                | Zip code is not correct.
            input.kts-input(type="text" name="zipcode" [(ngModel)]="zipCode" #zipcode="ngModel" [disabled]="this.selectedState.length === 0" required)  
          
