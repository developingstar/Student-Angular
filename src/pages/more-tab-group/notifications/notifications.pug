.page-wrapper
  .notifications-page-wrapper
    ion-col.lp-list-col(col-12 col-md-8)
      mobile-header([isScrolled]="isScrolled", [title]="title")
    ion-content.lp-list
      .kts-card
        .kts-card-wrapper
          //- a.kts-card-link( *ngFor="let notification of notifications", (click)="goToPage"($event))
          a.kts-card-link( *ngFor="let notification of notifications")
            .kts-card-data
              h2.kts-card-item-header
                | {{notification.subject}}
              h3.kts-card-item-info
                | {{notification.organization_name}}
            img.link-arrow(src="assets/icon/link-arrow.svg") 

      