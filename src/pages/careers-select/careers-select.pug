.page-wrapper
  .filter-list-page-wrapper
    ion-col.web-filter-col(col-4)
      filter-careers
    ion-col.lp-list-col(col-12, col-md-8)
      .selected-careers-wrapper
        .selected-carrers-header-row
          .selected-careers-count
            | Selected carrer fields: 0/5
          .kts-primary-btn.selected-careers-save
            | Save
        .selected-careers
          .selected-item(*ngFor="let career of selectedCareers")
            .career-title
              | {{career.title}}
            span.close
              | &times;          
      .careers-fields-header
        | Select 5 careers fields
      ion-content.lp-list.careers-fields-list(no-padding)
        .careers-fields-item(*ngFor="let career of filterCareersList")
          .careers-fields-item-title
            | {{career.title}}
          button.select((click)="selectCareer(career)")
            | Select       
  .floating-filter-btn()
    | Refine
